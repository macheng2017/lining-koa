extends ../layout

block content
  .container
    .row
      form.form-horizontal(id='uploadForm', method='post', action='/admin/upload', encType='multipart/form-data')

        .form-group
          lable.col-sm-10.control-lable 如果已经上传过图片,点击更新图片即可
            a(href="/admin/updateImg") 更新
        .form-group
          lable.col-sm-10.control-lable 可以选择多个图片文件
          .col-sm-12
            input.form-control-file.file-loading( id='imgFile' name='imgFile' type='file' multiple data-show-upload="false" data-show-caption="true" data-msg-placeholder="Select {files} for upload...")
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-primary(id='submit' type='submit' value='Upload') 录入
  script.
        $(function () {
        //0.初始化fileinput
        var oFileInput = new FileInput();
        oFileInput.Init("imgFile", "/admin/upload");
    });
    //初始化fileinput
    var FileInput = function () {
        var oFile = new Object();

        //初始化fileinput控件（第一次初始化）
        oFile.Init = function(ctrlName, uploadUrl) {
        var control = $('#' + ctrlName);

        //初始化上传控件的样式
        control.fileinput({
            language: 'zh', //设置语言
            uploadUrl: uploadUrl, //上传的地址
            allowedFileExtensions: ['jpg', 'gif', 'png'],//接收的文件后缀
            //- theme: "explorer",
            showPreview: true,
            showUpload: false, //是否显示上传按钮
            //- showCaption: false,//是否显示标题
            dropZoneEnabled: false,
            uploadAsync: false, // 使用同步上传,如果开启会使用异步多线程
            //- browseClass: "btn btn-primary", //按钮样式
            dropZoneEnabled: false,//是否显示拖拽区域
            //minImageWidth: 50, //图片的最小宽度
            //minImageHeight: 50,//图片的最小高度
            //maxImageWidth: 1000,//图片的最大宽度
            //maxImageHeight: 1000,//图片的最大高度
            //maxFileSize: 0,//单位为kb，如果为0表示不限制文件大小
            //minFileCount: 0,
            maxFileCount: 30, //表示允许同时上传的最大文件个数
            enctype: 'multipart/form-data',
            validateInitialCount: true,
            //- previewFileIcon: "<i class='glyphicon glyphicon-king'></i>",
            msgFilesTooMany: "选择上传的文件数量({n}) 超过允许的最大数值{m}！",
        });

        //导入文件上传完成之后的事件
        $("#imgFile").on("fileuploaded", function (event, data, previewId, index) {
            $("#myModal").modal("hide");
            var data = data.response.lstOrderImport;
            if (data == undefined) {
                toastr.error('文件格式类型不正确');
                return;
            }
            //1.初始化表格
            //- var oTable = new TableInit();
            //- oTable.Init(data);
            //- $("#div_startimport").show();
        });
    }
        return oFile;
    };
