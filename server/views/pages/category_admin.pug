extends ../layout

block content
  .container
    .row
      form.form-horizontal(method='post', action='/admin/category')
        input(type='hidden', name='category[_id]', value=category._id)
        .form-group
          label.col-sm-10.control-lable(for='inputCat') 商品分类
          .col-sm-10
            input#inputCat.form-control(type='text', name='category[name]', value=category.name)
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-primary(type='submit') 录入
